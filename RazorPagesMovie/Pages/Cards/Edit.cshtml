@page "{id:int?}"
@model RazorPagesMovie.Pages.Cards.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Card</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Card.Id" />
            <div class="form-group">
                <label asp-for="Card.Name" class="control-label"></label>
                <input asp-for="Card.Name" class="form-control" />
                <span asp-validation-for="Card.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Card.PokemonType" class="control-label"></label>
                <input asp-for="Card.PokemonType" class="form-control" />
                <span asp-validation-for="Card.PokemonType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Card.ExpansionSet" class="control-label"></label>
                <input asp-for="Card.ExpansionSet" class="form-control" />
                <span asp-validation-for="Card.ExpansionSet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Card.Price" class="control-label"></label>
                <input asp-for="Card.Price" class="form-control" />
                <span asp-validation-for="Card.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
